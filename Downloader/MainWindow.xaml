<Window x:Class="Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="113" Width="512" WindowStyle="None" AllowsTransparency="True">
    <Grid Background="#FF2E2E2E" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="VisualProgress" HorizontalAlignment="Left" Height="26" Margin="10,27,0,0" VerticalAlignment="Top" Width="484"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="419,76,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="23"/>
        <Label Content="Updating Groovify" HorizontalAlignment="Left" Margin="7,3,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3" Height="26" Width="107"/>
        <Label x:Name="DownloadBytes" Content="0 / 120b" HorizontalAlignment="Left" Margin="7,54,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3" Height="26" Width="412"/>
        <Label x:Name="Status" Content="Status: Waiting to download" HorizontalAlignment="Left" Margin="7,79,0,0" VerticalAlignment="Top" Foreground="#FFF3F3F3" Height="26" Width="412"/>

    </Grid>
</Window>
